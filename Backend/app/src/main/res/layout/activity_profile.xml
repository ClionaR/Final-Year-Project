<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cliona.backend.Profile"
    >

    <Button
        android:text="Noticeboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notice"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/foster"
        android:layout_alignBottom="@+id/foster"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/donate"
        android:textColor="@android:color/background_dark"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/apply"
        android:layout_alignBottom="@+id/apply"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <Button
        android:text="Logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignBaseline="@+id/adoption"
        android:layout_alignBottom="@+id/adoption"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/dspcalogo"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Adoption Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adoption"
        android:background="@android:color/holo_orange_dark"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/foster"
        android:layout_alignEnd="@+id/foster" />

    <Button
        android:text="Fostering Area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foster"
        android:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/adoption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Apply for an Animal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apply"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/foster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp" />

</RelativeLayout>